*{
	margin: 0px;
	padding: 0px;
}
#BaseElement{
	width: 100%;
	height: 100%;
	align-items: center;
	justify-content: center;
}
#Text{
	width: 750px;
	height: 200px;
	font-size: 100px;
	-unity-text-align: middle-center;
	align-self: center;
}
#Continue, #OutLevel, #GameOver{
	font-size: 60px;
	width: 800px;
	height: 150px;
	margin-top: 60px;
	background-color: rgb(255, 160, 0);
	border-width : 0px;
	border-radius : 75px;
	border-color : rgb(255, 160, 0);
}
#GameOver{
	display: none;
}
#Continue:hover, #OutLevel:hover, #GameOver:hover{
	background-color : rgb(255, 255, 0);
	border-width : 20px;
}